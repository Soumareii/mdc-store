{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}

{% block body %}

	<!-- start breadcrumbs -->
	<div class="breadcrumbs">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6 col-md-6 col-12">
					<div class="breadcrumbs-content">
						<h1 class="page-title">Mot de passe oublié?</h1>
					</div>
				</div>
				<div class="col-lg-6 col-md-6 col-12">
					<ul class="breadcrumb-nav">
						<li>
							<a href=" {{path('app_home')}} ">
								<i class="lni lni-home"></i>
								Accueil</a>
						</li>
						<li>
							<a href=" {{path('app_login')}} ">
								Connexion</a>
                        </li>
                        <li><small>Mot de passe oublié?</small></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<!-- End breadcrumbs -->

	<div class="item-details section">
		<div class="container">
			<div class="row">
				<div class="top-area col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
					<div class="mx-3 my-3">
						<div class="title mb-5">
							<h2 class="h4">
								<strong>Réinitialiser votre mot de passe</strong>
							</h2>
						</div>
						{% for flashError in app.flashes('reset_password_error') %}
							<div class="alert alert-danger" role="alert">{{ flashError }}</div>
						{% endfor %}
						{{ form_start(requestForm) }}
						<div class="form-group mb-3">
							{{ form_row(requestForm.email) }}
						</div>
						<div class="form-group mb-4">
							<small>
								Entrez votre adresse e-mail et nous vous enverrons un 
								lien pour réinitialiser votre mot de passe.
							</small>
						</div>
						<div class="form-group button row mx-0">
							<button class="btn btn-primary">Envoyer l'email de réinitialisation</button>
						</div>
						{{ form_end(requestForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>

